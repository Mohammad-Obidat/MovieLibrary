<Window x:Class="MovieLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Library" Height="600" Width="900">
    <DockPanel>
        <!-- Navigation Bar -->
        <Grid DockPanel.Dock="Top" Background="#FF2D2D30" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
    <Button x:Name="BtnHome" Width="140" Height="50" Background="#FF2196F3" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="BtnHome_Click">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Viewbox Width="20" Height="20">
                <Path Data="M104 112C90.7 112 80 122.7 80 136L80 184C80 197.3 90.7 208 104 208L152 208C165.3 208 176 197.3 176 184L176 136C176 122.7 165.3 112 152 112L104 112zM256 128C238.3 128 224 142.3 224 160C224 177.7 238.3 192 256 192L544 192C561.7 192 576 177.7 576 160C576 142.3 561.7 128 544 128L256 128zM256 288C238.3 288 224 302.3 224 320C224 337.7 238.3 352 256 352L544 352C561.7 352 576 337.7 576 320C576 302.3 561.7 288 544 288L256 288zM256 448C238.3 448 224 462.3 224 480C224 497.7 238.3 512 256 512L544 512C561.7 512 576 497.7 576 480C576 462.3 561.7 448 544 448L256 448zM80 296L80 344C80 357.3 90.7 368 104 368L152 368C165.3 368 176 357.3 176 344L176 296C176 282.7 165.3 272 152 272L104 272C90.7 272 80 282.7 80 296zM104 432C90.7 432 80 442.7 80 456L80 504C80 517.3 90.7 528 104 528L152 528C165.3 528 176 517.3 176 504L176 456C176 442.7 165.3 432 152 432L104 432z"
                      Fill="White" Stretch="Uniform"/>
            </Viewbox>
            <TextBlock Text="Movies List" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
    </Button>
    <Button x:Name="BtnAdd" Width="140" Height="50" Background="#FF4CAF50" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="BtnAdd_Click">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Viewbox Width="20" Height="20">
                <Path Data="M352 128C352 110.3 337.7 96 320 96C302.3 96 288 110.3 288 128L288 288L128 288C110.3 288 96 302.3 96 320C96 337.7 110.3 352 128 352L288 352L288 512C288 529.7 302.3 544 320 544C337.7 544 352 529.7 352 512L352 352L512 352C529.7 352 544 337.7 544 320C544 302.3 529.7 288 512 288L352 288L352 128z"
                      Fill="White" Stretch="Uniform"/>
            </Viewbox>
            <TextBlock Text="Add Movie" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
    </Button>
    <Button x:Name="BtnAbout" Width="140" Height="50" Background="#FFFF9800" Foreground="White" FontWeight="SemiBold" Cursor="Hand" Click="BtnAbout_Click">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Viewbox Width="20" Height="20">
                <Path Data="M64 32C28.7 32 0 60.7 0 96L0 416c0 35.3 28.7 64 64 64l448 0c35.3 0 64-28.7 64-64l0-320c0-35.3-28.7-64-64-64L64 32zm80 256l64 0c44.2 0 80 35.8 80 80 0 8.8-7.2 16-16 16L80 384c-8.8 0-16-7.2-16-16 0-44.2 35.8-80 80-80zm-24-96a56 56 0 1 1 112 0 56 56 0 1 1 -112 0zm240-48l112 0c13.3 0 24 10.7 24 24s-10.7 24-24 24l-112 0c-13.3 0-24-10.7-24-24s10.7-24 24-24zm0 96l112 0c13.3 0 24 10.7 24 24s-10.7 24-24 24l-112 0c-13.3 0-24-10.7-24-24s10.7-24 24-24z"
                      Fill="White" Stretch="Uniform"/>
            </Viewbox>
            <TextBlock Text="About" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>
    </Button>
</StackPanel>

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Foreground="White"
                       Margin="12,0,12,0"
                       FontWeight="Bold"
                       Text="Movie Library" />
        </Grid>

        <!-- Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
