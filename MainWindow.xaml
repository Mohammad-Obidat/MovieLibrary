<Window x:Class="MovieLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Library" Height="600" Width="900">
    <DockPanel>
        <!-- Navigation Bar -->
        <Grid DockPanel.Dock="Top" Background="#FF2D2D30" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <Button x:Name="BtnHome" Content="Show Movies" Width="120" Height="25" Margin="8" Click="BtnHome_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="BtnAdd" Content="Add Movie" Width="120" Height="25" Margin="8" Click="BtnAdd_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="BtnAbout" Content="About" Width="120" Height="25" Margin="8" Click="BtnAbout_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
            </StackPanel>

            <TextBlock Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Foreground="White"
                       Margin="12,0,12,0"
                       FontWeight="Bold"
                       Text="Movie Library" />
        </Grid>

        <!-- Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
